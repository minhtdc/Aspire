<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
<!--    Minh Nguyễn-->
    //Màn hình join group
    <!-- button -->
    <style name="JoinGroupButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_effect</item>

    </style>

<!--    Ngọc Huyền-->
    <style name="EditTextPassword">
        <item name="android:inputType">textPassword</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:drawableLeft">@drawable/ic_vpn_key_black_24dp</item>
    </style>

<!--    Trần Minh Phúc-->
    <style name="Starting" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#81BEFF</item>
    </style>

</resources>
