<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginRight="250dp">
        <Button
            android:id="@+id/btnBack"
            android:background="@drawable/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1.35"
            android:scaleY="1.95"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">
        <TextView
            android:background="@drawable/custom_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtViewChangePass"
            android:padding="20dp"
            android:layout_margin="3dp"
            android:textColor="@color/colorText"/>
        <EditText
            android:id="@+id/edtOldPass"
            android:hint="@string/edtOldPass"
            android:background="@drawable/custom_edittext"
            style="@style/EditTextPassword"/>
        <EditText
            android:id="@+id/edtNewPass"
            android:hint="@string/edtNewPass"
            android:background="@drawable/custom_edittext"
            style="@style/EditTextPassword"/>
        <EditText
            android:id="@+id/edtNewPassAgain"
            android:hint="@string/edtNewPassAgain"
            android:background="@drawable/custom_edittext"
            style="@style/EditTextPassword"/>
        <Button
            android:id="@+id/btnConfirmPassword"
            android:background="@drawable/button_effect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnConfirm"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">
        <TextView
            android:background="@drawable/custom_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtViewChangeName"
            android:padding="20dp"
            android:layout_margin="6dp"
            android:textColor="@color/colorText"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtViewHereOldName"
            android:textColor="@color/colorText"
            android:paddingLeft="20dp"/>
        <EditText
            android:id="@+id/edtOldName"
            android:hint="@string/edtOldName"
            android:background="@drawable/custom_edittext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:padding="10dp"/>
        <Button
            android:id="@+id/btnConfirmUsername"
            android:background="@drawable/button_effect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnConfirm"/>
    </LinearLayout>
</LinearLayout>